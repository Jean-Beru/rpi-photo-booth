{
  "mode":       "production",
  "port":       3000,
  "secret":     "thisIsMySecret",
  "locales":    ["en", "fr"],
  "cookieName": "cookieName",
  "raspberry": {
    "stream": {
      "module":       "raspicam",
      "preview": {
        "mode":      "timelapse",
        "width":     640,
        "height":    480,
        "timelapse": 500,
        "timeout":   999999999,
        "output":    "%root%/public/stream/caption%02d.jpg",
        "awb":       "off",
        "nopreview": true,
        "thumb":     "0:0:0",
        "burst":     true,
        "shutter":   100000,
        "rotation":  90
      },
      "photo": {
        "mode":      "photo",
        "quality":   90,
        "width":     1920,
        "height":    1440,
        "timeout":   1000,
        "output":    "%root%/public/photos/%ts%.jpg",
        "nopreview": true,
        "exposure":  "night",
        "rotation":  90
      }
    }
  }
}
